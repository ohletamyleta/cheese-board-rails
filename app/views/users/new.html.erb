<h1>Sign Up Here</h1>

<%= render partial: 'layouts/errors', locals: {object: @user}  %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.submit "Sign Up" %>
<% end %>