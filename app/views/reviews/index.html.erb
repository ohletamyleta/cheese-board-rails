<% if @cheese %>
  <h1>Reviews for <%= @cheese.name%>
  <% else %>
  <h1>Here's a thought!</h1>
  <% end %>

  <ul>
  <% @reviews.each do |review| %>

    <li>
    <%= review.cheese.name %>: <%= link_to review.title, review_path(review)%> - <%= review.blocks%>
    </li> <br> <br>

    <% end %>
    </ul>

    