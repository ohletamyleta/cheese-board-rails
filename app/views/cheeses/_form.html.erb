<%= render partial: 'layouts/errors', locals: {object: @cheese}  %>

<%= form_for @cheese do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :color %>
  <%= f.text_field :color %>
</div> 
<div> 
  <%= f.label :texture %>
  <%= f.text_field :texture %>
</div> 
<div>  


<p> Select a Style that already exists: </p>
<div>
  <%= f.collection_select :style_id, Style.all, :id, :name, include_blank: 'Select One'%>

</div>

<p> Or create a new Style: </p>
<div>
  <%=f.fields_for :style do |b| %>
    <div>
    <%= b.label :name %>
    <%= b.text_field :name %>
    </div>
    <div>
    <%= b.label :details %>
    <%= b.text_field :details %>
  <% end %>
</div>
<br>


  <%= f.submit "FonDO It!" %>
<% end %>